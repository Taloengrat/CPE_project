<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayingMode.PlayPage"
    android:background="@color/blue50">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/ViewPage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/answer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <ImageView
        android:id="@+id/check"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/elevator_regtang"
        android:padding="120dp"
        android:visibility="invisible"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/bar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/backbar"
        android:orientation="horizontal"
        app:itemIconSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.1"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">


        <ImageView
            android:id="@+id/hint"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/help"
            tools:ignore="VectorDrawableCompat" />

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="invisible"
            app:srcCompat="@drawable/mic"
            tools:ignore="VectorDrawableCompat" />

        <ImageView
            android:id="@+id/speak"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="13dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/voice"
            tools:ignore="VectorDrawableCompat" />

        <!--        <ImageView-->
        <!--            android:id="@+id/next"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:layout_weight="1"-->
        <!--            app:srcCompat="@drawable/next"-->
        <!--            tools:ignore="VectorDrawableCompat" />-->
    </LinearLayout>

    <ImageView
        android:id="@+id/keyboard"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="8dp"
        android:background="@drawable/elevetorcircle"
        app:layout_constraintCircle="@id/mic"
        app:layout_constraintCircleAngle="50"
        app:layout_constraintCircleRadius="60dp"
        app:srcCompat="@drawable/keyboard"
        tools:layout_editor_absoluteX="225dp"
        tools:layout_editor_absoluteY="594dp"
        tools:ignore="MissingConstraints"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/counttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="@font/bold"
        android:textSize="100dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/frameHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/framehint"
        android:elevation="16dp"
        android:orientation="horizontal"
        android:paddingStart="4dp"
        android:paddingTop="4dp"
        android:paddingEnd="4dp"
        android:paddingBottom="4dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/bar"
        app:layout_constraintStart_toStartOf="@+id/bar">

        <TextView
            android:id="@+id/hint1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/elevetorcircle"
            android:ems="1"
            android:fontFamily="@font/bold"
            android:gravity="center"
            android:text="1"
            android:textSize="24dp"

            />

        <TextView
            android:id="@+id/hint2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@drawable/elevetorcircle"
            android:ems="1"
            android:fontFamily="@font/bold"
            android:gravity="center"
            android:text="2"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/hint3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@drawable/elevetorcircle"
            android:ems="1"
            android:fontFamily="@font/bold"
            android:gravity="center"
            android:text="3"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/hint4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@drawable/elevetorcircle"
            android:ems="1"
            android:fontFamily="@font/bold"
            android:gravity="center"
            android:text="4"
            android:textSize="24dp" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textClock" />

    <ImageView
        android:id="@+id/mic"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_weight="1"
        android:background="@drawable/backgroundmic"
        android:elevation="16dp"
        app:layout_constraintCircle="@id/bar"
        app:srcCompat="@drawable/mic"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/textClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:fontFamily="@font/bold"
        android:text="Timer"
        android:textColor="@color/black"
        android:textSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textClock"
        app:layout_constraintEnd_toStartOf="@+id/textClock"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintTop_toTopOf="@+id/textClock"
        app:layout_constraintWidth_percent="0.1"
        app:srcCompat="@drawable/clock"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/startClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="32dp"
        app:layout_constraintBottom_toBottomOf="@+id/bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/clickstart" />


    <TextView
        android:id="@+id/answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:background="@drawable/frame"
        android:gravity="center"
        android:padding="8dp"
        android:textSize="20dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etKeyboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:gravity="center"
        android:padding="8dp"
        android:background="@drawable/frame"
        app:layout_constraintCircle="@id/answer"
        tools:ignore="MissingConstraints"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/etKeyboard"
        app:layout_constraintStart_toEndOf="@+id/etKeyboard"
        app:layout_constraintTop_toTopOf="@+id/etKeyboard"
        app:srcCompat="@drawable/confirm"
        android:visibility="invisible"/>


</androidx.constraintlayout.widget.ConstraintLayout>